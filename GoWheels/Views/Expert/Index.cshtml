@model IEnumerable<GoWheels.Models.Post>

@{
    ViewData["Title"] = "Expert Dashboard";
    var posts = Model.ToList();
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6 fw-bold text-primary">
                    <i class="fa-solid fa-clipboard-check me-2"></i>Expert Dashboard
                </h1>
                <span class="badge bg-secondary">@posts.Count pending</span>
            </div>
            <p class="text-muted mb-0 mt-2">
                Review and verify pending car listings.
            </p>
        </div>
    </div>

    <!-- Main Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-list me-2"></i>Pending Posts for Review
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="text-center">Constructor</th>
                                    <th class="text-center">Model</th>
                                    <th class="text-center">Type</th>
                                    <th class="text-center">Price</th>
                                    <th class="text-center">Owner</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in posts)
                                {
                                    <tr data-post-id="@item.Id">
                                        <td class="text-center align-middle">
                                            <strong>@Html.DisplayFor(modelItem => item.Constructor)</strong>
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.ModelName)
                                        </td>
                                        <td class="text-center align-middle">
                                            @if (item.IsForRent)
                                            {
                                                <span class="badge bg-info">Rent</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Sale</span>
                                            }
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="fw-bold text-primary">@item.Price.ToString("N0") DT</span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <small>
                                                <a href="/user/details/@item.Owner.Id" class="text-decoration-none">
                                                    @Html.DisplayFor(modelItem => item.Owner.Name)
                                                </a>
                                            </small>
                                        </td>
                                        <td class="text-center align-middle">
                                            <div class="d-flex justify-content-center gap-1">
                                                <!-- Accept Button -->
                                                <button type="button" 
                                                        class="btn btn-sm btn-success px-3 py-1 expert-action-btn"
                                                        data-action="AcceptPost"
                                                        data-id="@item.Id">
                                                    <i class="fa-solid fa-check"></i>
                                                </button>
                                                
                                                <!-- Reject Button -->
                                                <button type="button" 
                                                        class="btn btn-sm btn-danger px-3 py-1 expert-action-btn"
                                                        data-action="RejectPost"
                                                        data-id="@item.Id">
                                                    <i class="fa-solid fa-times"></i>
                                                </button>
                                                
                                                <!-- Details Button -->
                                                <a class="btn btn-sm btn-outline-info px-3 py-1"
                                                   asp-controller="Post" 
                                                   asp-action="Details" 
                                                   asp-route-id="@item.Id">
                                                    <i class="fa-solid fa-eye me-1"></i>Details
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                
                                @if (!posts.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fa-solid fa-check-circle fa-3x mb-3" style="color: #28a745;"></i>
                                                <h5>All caught up!</h5>
                                                <p class="mb-0">No pending posts to review at the moment.</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (posts.Any())
                {
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                Showing <strong>@posts.Count</strong> pending @(posts.Count == 1 ? "post" : "posts")
                            </small>
                            <small class="text-muted">
                                <i class="fa-solid fa-info-circle me-1"></i>
                                Click action buttons or details to review posts
                            </small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>