@model GoWheels.Models.Post
@using GoWheels.Models 

@{
    ViewData["Title"] = "Details";
}

<style>
    .details-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
        padding: 40px 20px;
    }

    .details-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 2.5rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    /* Header Section */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
        padding-bottom: 1.5rem;
        border-bottom: 2px solid rgba(0, 0, 0, 0.05);
    }

    .page-title {
        font-weight: 700;
        font-size: 2.2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    /* Status Badges */
    .status-badge {
        padding: 0.75rem 1.5rem;
        border-radius: 25px;
        font-weight: 700;
        font-size: 1rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-accepted {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
    }

    .badge-rejected {
        background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        color: white;
    }

    .badge-pending {
        background: linear-gradient(135deg, #f6ad55 0%, #ed8936 100%);
        color: white;
    }

    .badge-default {
        background: linear-gradient(135deg, #a0aec0 0%, #718096 100%);
        color: white;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .btn-accept {
        padding: 0.75rem 2rem;
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(72, 187, 120, 0.3);
    }

    .btn-accept:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(72, 187, 120, 0.4);
    }

    .btn-reject {
        padding: 0.75rem 2rem;
        background: linear-gradient(135deg, #f56565 0%, #e53e3e 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(245, 101, 101, 0.3);
    }

    .btn-reject:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(245, 101, 101, 0.4);
    }

    /* Warning Alert */
    .warning-alert {
        background: rgba(246, 173, 85, 0.1);
        border: 1px solid rgba(237, 137, 54, 0.3);
        border-left: 4px solid #ed8936;
        border-radius: 12px;
        padding: 1rem 1.5rem;
        color: #c05621;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 500;
        backdrop-filter: blur(10px);
    }

    /* Info Section */
    .info-section {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.5);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .section-title {
        font-weight: 700;
        font-size: 1.5rem;
        color: #2d3748;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-grid {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 1rem;
        align-items: start;
    }

    .info-label {
        font-weight: 600;
        color: #667eea;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding-top: 0.75rem;
    }

    .info-value {
        color: #4a5568;
        font-size: 1.1rem;
        font-weight: 500;
        padding: 0.75rem;
        background: rgba(102, 126, 234, 0.05);
        border-radius: 8px;
        border-left: 3px solid #667eea;
    }

    .info-value ul {
        margin: 0;
        padding-left: 1.2rem;
    }

    .info-value li {
        margin-bottom: 0.5rem;
    }

    .info-value li:last-child {
        margin-bottom: 0;
    }

    /* Images Grid */
    .images-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .image-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        background: white;
    }

    .image-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .image-card img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        display: block;
    }

    .no-image-placeholder {
        width: 100%;
        height: 250px;
        background: rgba(160, 174, 192, 0.1);
        border: 2px dashed rgba(160, 174, 192, 0.3);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #718096;
        font-weight: 500;
    }

    .btn-back {
        padding: 0.75rem 1.5rem;
        border: 2px solid rgba(102, 126, 234, 0.3);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.9);
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .btn-back:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    @@media (max-width: 768px) {
        .details-container {
            padding: 1.5rem;
        }
        
        .info-grid {
            grid-template-columns: 1fr;
            gap: 0.5rem;
        }
        
        .info-label {
            padding-top: 0;
            margin-top: 0.5rem;
        }
        
        .page-header {
            flex-direction: column;
            text-align: center;
        }
        
        .action-buttons {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="details-page">
    <div class="details-container">
        <div class="page-header">
            <h1 class="page-title">üìã Post Details</h1>
            
            @if (Model.Status == PostStatus.Pending)
            {
                <div class="action-buttons">
                    <form asp-action="ChangeStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="newStatus" value="@PostStatus.Accepted" />
                        <button type="submit" class="btn-accept">‚úì Accept</button>
                    </form>

                    <form asp-action="ChangeStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="hidden" name="newStatus" value="@PostStatus.Rejected" />
                        <button type="submit" class="btn-reject">‚úó Reject</button>
                    </form>
                </div>
            }
            else
            {
                <div class="warning-alert">
                    <span>‚ö†Ô∏è</span>
                    <span>This post has status <strong>@Model.Status</strong>, you can't verify it.</span>
                </div>
            }
        </div>

        <div class="info-section">
            <h4 class="section-title">‚ÑπÔ∏è Post Information</h4>
            <div class="info-grid">
                <div class="info-label">@Html.DisplayNameFor(model => model.CreatedAt)</div>
                <div class="info-value">@Html.DisplayFor(model => model.CreatedAt)</div>
                
                <div class="info-label">@Html.DisplayNameFor(model => model.Status)</div>
                <div class="info-value">
                    @if (Model.Status == PostStatus.Accepted)
                    {
                        <span class="status-badge badge-accepted">@Model.Status</span>
                    }
                    else if (Model.Status == PostStatus.Rejected)
                    {
                        <span class="status-badge badge-rejected">@Model.Status</span>
                    }
                    else if (Model.Status == PostStatus.Pending)
                    {
                        <span class="status-badge badge-pending">@Model.Status</span>
                    }
                    else
                    {
                        <span class="status-badge badge-default">@Model.Status</span>
                    }
                </div>

                <div class="info-label">@Html.DisplayNameFor(model => model.RateAverage)</div>
                <div class="info-value">@Html.DisplayFor(model => model.RateAverage)</div>

                <div class="info-label">@Html.DisplayNameFor(model => model.Constructor)</div>
                <div class="info-value">@Html.DisplayFor(model => model.Constructor)</div>

                <div class="info-label">@Html.DisplayNameFor(model => model.ModelName)</div>
                <div class="info-value">@Html.DisplayFor(model => model.ModelName)</div>

                <div class="info-label">@Html.DisplayNameFor(model => model.ReleaseDate)</div>
                <div class="info-value">@Html.DisplayFor(model => model.ReleaseDate)</div>

                <div class="info-label">@Html.DisplayNameFor(model => model.PurchaseDate)</div>
                <div class="info-value">@Html.DisplayFor(model => model.PurchaseDate)</div>

                <div class="info-label">@Html.DisplayNameFor(model => model.Kilometrage)</div>
                <div class="info-value">@Html.DisplayFor(model => model.Kilometrage)</div>

                <div class="info-label">@Html.DisplayNameFor(model => model.Price)</div>
                <div class="info-value">@Html.DisplayFor(model => model.Price)</div>

                <div class="info-label">@Html.DisplayNameFor(model => model.Specifications)</div>
                <div class="info-value">
                    @if (Model.Specifications != null && Model.Specifications.Count != 0)
                    {
                        <ul>
                            @foreach (var spec in Model.Specifications)
                            {
                                <li><strong>@spec.Key:</strong> @spec.Value</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No specifications provided.</span>
                    }
                </div>

                <div class="info-label">@Html.DisplayNameFor(model => model.Owner)</div>
                <div class="info-value">@Html.DisplayFor(model => model.Owner.Name)</div>
            </div>
            
            <div class="images-grid">
                @if (Model.PostImages != null && Model.PostImages.Any())
                {
                    @foreach (var postImage in Model.PostImages)
                    {
                        <div class="image-card">
                            <img src="@postImage.ImageUrl"
                                 alt="@Model.ModelName Image" />
                        </div>
                    }
                }
                else
                {
                    <div class="no-image-placeholder">
                        <span>No Images Available</span>
                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Index" class="btn-back">‚Üê Back to List</a>
        </div>
    </div>
</div>