@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">
                <i class="fa-solid fa-shield-alt me-2"></i>Admin Dashboard
            </h1>
            <p class="text-muted mb-0">System management and administration</p>
        </div>
    </div>

    <!-- Management Cards -->
    <div class="row g-4">
        <!-- Users Management -->
        <div class="col-md-4">
            <a asp-action="UsersManagement" class="card text-decoration-none h-100 border-start border-4 border-primary shadow-sm">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="me-4">
                        <i class="fa-solid fa-users-gear fa-3x text-primary"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="card-title text-primary mb-2">Users Management</h3>
                        <p class="card-text text-muted mb-0">Manage all registered users by role</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Posts Management -->
        <div class="col-md-4">
            <a asp-action="PostsManagement" class="card text-decoration-none h-100 border-start border-4 border-success shadow-sm">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="me-4">
                        <i class="fa-solid fa-newspaper fa-3x text-success"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="card-title text-success mb-2">Posts Management</h3>
                        <p class="card-text text-muted mb-0">Review and manage all vehicle posts</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- System Logs -->
        <div class="col-md-4">
            <a asp-action="Logs" class="card text-decoration-none h-100 border-start border-4 border-info shadow-sm">
                <div class="card-body d-flex align-items-center p-4">
                    <div class="me-4">
                        <i class="fa-solid fa-clipboard-check fa-3x text-info"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="card-title text-info mb-2">System Logs</h3>
                        <p class="card-text text-muted mb-0">View activity logs and system events</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>