@model IEnumerable<GoWheels.Models.Post>

@{
    ViewData["Title"] = "Deleted Posts";
}

<style>
    .posts-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
        padding: 40px 20px;
    }

    .posts-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 2.5rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
        gap: 1rem;
        padding-bottom: 1.5rem;
        border-bottom: 3px solid rgba(113, 128, 150, 0.2);
    }

    .page-title {
        font-weight: 700;
        font-size: 2.2rem;
        color: #718096;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .btn-back {
        padding: 0.6rem 1.5rem;
        border: 2px solid rgba(113, 128, 150, 0.3);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.9);
        color: #718096;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        background: linear-gradient(135deg, #a0aec0 0%, #718096 100%);
        color: white;
        border-color: transparent;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(113, 128, 150, 0.4);
    }

    .table-wrapper {
        background: rgba(255, 255, 255, 0.7);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.5);
    }

    .table {
        margin-bottom: 0;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table thead th {
        background: linear-gradient(135deg, rgba(160, 174, 192, 0.1) 0%, rgba(113, 128, 150, 0.1) 100%);
        color: #2d3748;
        font-weight: 700;
        padding: 1.2rem 1rem;
        border-bottom: 2px solid rgba(113, 128, 150, 0.2);
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table tbody tr {
        transition: all 0.3s ease;
    }

    .table tbody tr:hover {
        background: rgba(113, 128, 150, 0.05);
        transform: scale(1.01);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .table td {
        padding: 1.2rem 1rem;
        vertical-align: middle;
        color: #4a5568;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .badge-deleted {
        background: linear-gradient(135deg, #a0aec0 0%, #718096 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        box-shadow: 0 2px 8px rgba(113, 128, 150, 0.3);
    }

    .btn-details {
        padding: 0.5rem 1.2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .btn-details:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #a0aec0;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .posts-container {
            padding: 1.5rem;
        }
        .page-title {
            font-size: 1.8rem;
        }
    }
</style>

<div class="posts-page">
    <div class="posts-container">
        <div class="page-header">
            <h1 class="page-title">üóëÔ∏è Deleted Posts</h1>
            <a asp-action="PostsManagement" class="btn-back">‚Üê Back</a>
        </div>

        <div class="table-wrapper table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>@Html.DisplayNameFor(model => model.Constructor)</th>
                        <th>@Html.DisplayNameFor(model => model.ModelName)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.Owner)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td><span class="badge-deleted">@item.Status</span></td>
                            <td>@Html.DisplayFor(modelItem => item.Constructor)</td>
                            <td>@Html.DisplayFor(modelItem => item.ModelName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td>@Html.DisplayFor(modelItem => item.Owner.Name)</td>
                            <td>
                                <a class="btn-details" asp-controller="Admin" asp-action="DetailsPost" asp-route-id="@item.Id">Details</a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="empty-state">No deleted posts found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>