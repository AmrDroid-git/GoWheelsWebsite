@model GoWheels.Models.Post
@using GoWheels.Models 

@{
    ViewData["Title"] = "Post Details";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Post Details</h1>
        <div>
            @if (Model.Status == PostStatus.Accepted)
            {
                <span class="badge bg-success fs-6">@Model.Status</span>
            }
            else if (Model.Status == PostStatus.Rejected)
            {
                <span class="badge bg-danger fs-6">@Model.Status</span>
            }
            else if (Model.Status == PostStatus.Pending)
            {
                <span class="badge bg-warning text-dark fs-6">@Model.Status</span>
            }
            else
            {
                <span class="badge bg-secondary fs-6">@Model.Status</span>
            }
        </div>
    </div>

    <div>
        <h4>Post Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedAt)</dd>
            
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.RateAverage)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.RateAverage)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Constructor)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Constructor)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ModelName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ModelName)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Owner)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Owner.Name)</dd>
        </dl>
        
        <div class="row mt-3">
            @if (Model.PostImages != null && Model.PostImages.Any())
            {
                @foreach (var postImage in Model.PostImages)
                {
                    <div class="col-md-4 mb-3 d-flex justify-content-center">
                        <img src="@postImage.ImageUrl"
                             alt="@Model.ModelName Image"
                             class="img-fluid rounded"
                             style="max-height: 300px; object-fit: cover;" />
                    </div>
                }
            }
        </div>
    </div>
    
    <hr class="my-4" />

    <div class="card bg-light mb-4">
        <div class="card-header fw-bold">Admin Actions</div>
        <div class="card-body">
            <div class="row g-3 align-items-center">
                
                <div class="col-auto">
                    <form asp-action="ChangeStatus" method="post" class="d-flex gap-2 align-items-center">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <label class="fw-bold">Change Status:</label>
                        
                        <select name="newStatus" class="form-select" asp-items="Html.GetEnumSelectList<PostStatus>()">
                            </select>
                        
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>

                <div class="col"></div> <div class="col-auto">
                    <form asp-action="DeletePost" method="post" onsubmit="return confirm('Are you sure you want to PERMANENTLY delete this post? This cannot be undone.');">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete Post from Database
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <div class="mt-3 mb-5">
        <a asp-action="PostsManagement" class="btn btn-outline-secondary">Back to Posts Management</a>
    </div>
</div>