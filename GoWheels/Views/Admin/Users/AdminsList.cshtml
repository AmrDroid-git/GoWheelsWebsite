@model IEnumerable<GoWheels.Models.ApplicationUser>

@{
    ViewData["Title"] = "Administrators";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="UsersManagement" class="text-decoration-none mb-3 d-inline-block">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Users
            </a>
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6 fw-bold">
                    <i class="fa-solid fa-shield-alt me-2 text-danger"></i>Administrators
                </h1>
                <span class="badge bg-danger fs-6">@Model.Count() admins</span>
            </div>
            <p class="text-muted mb-0">System administrators with full control</p>
        </div>
    </div>

    <!-- Admins Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-danger bg-opacity-10 border-danger">
            <h5 class="mb-0 text-dark">
                <i class="fa-solid fa-list me-2"></i>Admins List
            </h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover data-table">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var admin in Model)
                    {
                        <tr>
                            <td><strong>@admin.Name</strong></td>
                            <td>@admin.Address</td>
                            <td>@admin.PhoneNumber</td>
                            <td>@admin.Email</td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a class="btn btn-sm btn-outline-info"
                                       asp-controller="User" 
                                       asp-action="Details" 
                                       asp-route-id="@admin.Id"
                                       title="View Profile">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>

                                    @if (admin.Id != User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                    {
                                        <form asp-action="DeleteUser" asp-route-id="@admin.Id" method="post" 
                                              onsubmit="return confirm('ARE YOU SURE? This will delete Admin @admin.Name and ALL their data!');" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Admin">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-user-slash fa-2x mb-2"></i>
                                <p class="mb-0">No administrators found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section AdminScripts {
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.data-table').DataTable({
            order: [[0, 'asc']],
            pageLength: 25,
            language: {
                search: 'Search admins:'
            }
        });
    });
    </script>
}