@model IEnumerable<GoWheels.Models.ApplicationUser>

@{
    ViewData["Title"] = "Regular Users";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="UsersManagement" class="text-decoration-none mb-3 d-inline-block">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Users
            </a>
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6 fw-bold">
                    <i class="fa-solid fa-user me-2 text-primary"></i>Regular Users
                </h1>
                <span class="badge bg-primary fs-6">@Model.Count() users</span>
            </div>
            <p class="text-muted mb-0">Clients who post vehicles for rent or sale</p>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary bg-opacity-10 border-primary">
            <h5 class="mb-0 text-dark">
                <i class="fa-solid fa-list me-2"></i>Users List
            </h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover data-table">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Rating</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>@user.Name</strong></td>
                            <td>@user.Address</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.RateAverage.HasValue)
                                {
                                    <span class="text-warning">
                                        @user.RateAverage.Value.ToString("0.0") 
                                        <i class="fa-solid fa-star"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Not rated</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-info"
                                   asp-controller="User" 
                                   asp-action="Details" 
                                   asp-route-id="@user.Id">
                                    <i class="fa-solid fa-eye"></i> Profile
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-users-slash fa-2x mb-2"></i>
                                <p class="mb-0">No users found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section AdminScripts {
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.data-table').DataTable({
            order: [[0, 'asc']],
            pageLength: 25,
            language: {
                search: 'Search users:'
            }
        });
    });
    </script>
}