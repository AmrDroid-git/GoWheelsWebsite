@model IEnumerable<GoWheels.Models.ApplicationUser>

@{
    ViewData["Title"] = "List of Experts";
    string role = ViewData["CurrentRole"] as string ?? "Expert";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>List of Experts</h1>
        <a asp-action="UsersManagement" class="btn btn-secondary">Back</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Roles</th>
            <th>Rate Average</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><small class="text-muted">@user.Id</small></td>
                <td>@user.Name</td>
                <td>@user.Address</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <span class="badge bg-info text-dark">@role</span>
                </td>
                <td>
                    @if (user.RateAverage != null)
                    {
                        <span>@user.RateAverage <i class="bi bi-star-fill text-warning"></i></span>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">not rated</span>
                    }
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No experts found.</td>
            </tr>
        }
        </tbody>
    </table>
</div>