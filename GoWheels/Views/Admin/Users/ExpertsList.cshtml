@model IEnumerable<GoWheels.Models.ApplicationUser>

@{
    ViewData["Title"] = "Experts";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="UsersManagement" class="text-decoration-none mb-3 d-inline-block">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Users
            </a>
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-6 fw-bold">
                    <i class="fa-solid fa-user-check me-2 text-success"></i>Experts
                </h1>
                <span class="badge bg-success fs-6">@Model.Count() experts</span>
            </div>
            <p class="text-muted mb-0">Verified post reviewers</p>
        </div>
    </div>

    <!-- Experts Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-success bg-opacity-10 border-success">
            <h5 class="mb-0 text-dark">
                <i class="fa-solid fa-list me-2"></i>Experts List
            </h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover data-table">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expert in Model)
                    {
                        <tr>
                            <td><strong>@expert.Name</strong></td>
                            <td>@expert.Address</td>
                            <td>@expert.PhoneNumber</td>
                            <td>@expert.Email</td>
                            <td>
                                <a class="btn btn-sm btn-outline-info"
                                   asp-controller="User" 
                                   asp-action="Details" 
                                   asp-route-id="@expert.Id">
                                    <i class="fa-solid fa-eye"></i> Profile
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-user-slash fa-2x mb-2"></i>
                                <p class="mb-0">No experts found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section AdminScripts {
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.data-table').DataTable({
            order: [[0, 'asc']],
            pageLength: 25,
            language: {
                search: 'Search experts:'
            }
        });
    });
    </script>
}