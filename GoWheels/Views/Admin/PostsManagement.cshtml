@{
    ViewData["Title"] = "Posts Management";
    
    int pendingCount = ViewData["PendingCount"] as int? ?? 0;
    int acceptedCount = ViewData["AcceptedCount"] as int? ?? 0;
    int rejectedCount = ViewData["RejectedCount"] as int? ?? 0;
    int deletedCount = ViewData["DeletedCount"] as int? ?? 0;
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Index" class="text-decoration-none mb-3 d-inline-block">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Dashboard
            </a>
            <h1 class="display-5 fw-bold">
                <i class="fa-solid fa-newspaper me-2"></i>Posts Management
            </h1>
            <p class="text-muted">View and manage posts by verification status</p>
        </div>
    </div>

    <!-- Status Cards -->
    <div class="row g-4">
        @await Html.PartialAsync("_StatusCard", null, new ViewDataDictionary(ViewData) {
            { "CardTitle", "Pending" },
            { "IconClass", "fa-solid fa-hourglass-half" },
            { "IconColor", "warning" },
            { "BorderColor", "warning" },
            { "Action", "PendingPosts" },
            { "Count", pendingCount },
            { "Description", "Awaiting expert review" }
        })

        @await Html.PartialAsync("_StatusCard", null, new ViewDataDictionary(ViewData) {
            { "CardTitle", "Accepted" },
            { "IconClass", "fa-solid fa-check-circle" },
            { "IconColor", "success" },
            { "BorderColor", "success" },
            { "Action", "AcceptedPosts" },
            { "Count", acceptedCount },
            { "Description", "Approved and live" }
        })

        @await Html.PartialAsync("_StatusCard", null, new ViewDataDictionary(ViewData) {
            { "CardTitle", "Rejected" },
            { "IconClass", "fa-solid fa-times-circle" },
            { "IconColor", "danger" },
            { "BorderColor", "danger" },
            { "Action", "RejectedPosts" },
            { "Count", rejectedCount },
            { "Description", "Denied by experts" }
        })

        @await Html.PartialAsync("_StatusCard", null, new ViewDataDictionary(ViewData) {
            { "CardTitle", "Deleted" },
            { "IconClass", "fa-solid fa-trash" },
            { "IconColor", "secondary" },
            { "BorderColor", "secondary" },
            { "Action", "DeletedPosts" },
            { "Count", deletedCount },
            { "Description", "Archived or removed" }
        })
    </div>
</div>