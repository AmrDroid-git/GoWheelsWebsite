@model IEnumerable<GoWheels.Models.AdminLog>

@{
    ViewData["Title"] = "System Logs";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Index" class="text-decoration-none mb-3 d-inline-block">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Dashboard
            </a>
            <h1 class="display-6 fw-bold">
                <i class="fa-solid fa-clipboard-list me-2 text-info"></i>System Logs
            </h1>
            <p class="text-muted mb-0">Admin activity and system events</p>
        </div>
    </div>

    <!-- Logs Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fa-solid fa-list me-2"></i>Recent Activity Logs
            </h5>
        </div>
        <div class="card-body p-0">
            <table id="logsTable" class="table table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Date & Time</th>
                        <th>User</th>
                        <th>Action</th>
                        <th>Details</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td data-order="@log.CreatedAt.Ticks">
                                @log.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
                            </td>
                            <td>
                                @if (log.Actor != null)
                                {
                                    @log.Actor.UserName
                                }
                                else
                                {
                                    <span class="text-muted">SYSTEM</span>
                                }
                            </td>
                            <td>
                                <strong class="text-primary">@log.Action</strong>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(log.Details))
                                {
                                    <small class="text-muted">@log.Details</small>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-inbox fa-2x mb-2"></i>
                                <p class="mb-0">No logs found.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section AdminScripts {
    <script>
        $(function () {
            $('#logsTable').DataTable({
                order: [[0, 'desc']],
                pageLength: 100,
                lengthMenu: [[50, 100, 200], [50, 100, 200]],
                language: {
                    search: "Search:",
                    lengthMenu: "Show _MENU_ entries"
                }
            });
        });
    </script>
}