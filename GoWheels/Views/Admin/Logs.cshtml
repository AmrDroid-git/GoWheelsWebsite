@{
    ViewData["Title"] = "Logs";
}
<h1>System Logs</h1>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Date</th>
        <th>Utilisateur</th>
        <th>Action</th>
        <th>DÃ©tails</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var log in Model)
    {
        <tr>
            <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>@(log.Actor?.UserName ?? "SYSTEM")</td>
            <td>@log.Action</td>
            <td>@log.Details</td>
        </tr>
    }
    </tbody>
</table>

