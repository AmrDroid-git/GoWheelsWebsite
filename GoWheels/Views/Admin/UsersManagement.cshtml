@{
    ViewData["Title"] = "Users Management";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Users Management</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>
    
    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <a asp-action="UsersList" class="card text-decoration-none shadow-sm h-100 hover-shadow border-primary">
                <div class="card-body text-center p-5">
                    <i class="bi bi-person-fill display-4 text-primary mb-3"></i>
                    <h3 class="card-title text-dark">List of Users</h3>
                    <p class="card-text text-muted">View all registered clients</p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="ExpertsList" class="card text-decoration-none shadow-sm h-100 hover-shadow border-info">
                <div class="card-body text-center p-5">
                    <i class="bi bi-patch-check-fill display-4 text-info mb-3"></i>
                    <h3 class="card-title text-dark">List of Experts</h3>
                    <p class="card-text text-muted">View verified experts</p>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-action="AdminsList" class="card text-decoration-none shadow-sm h-100 hover-shadow border-danger">
                <div class="card-body text-center p-5">
                    <i class="bi bi-shield-lock-fill display-4 text-danger mb-3"></i>
                    <h3 class="card-title text-dark">List of Admins</h3>
                    <p class="card-text text-muted">View system administrators</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: transform 0.2s ease;
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
    }
</style>