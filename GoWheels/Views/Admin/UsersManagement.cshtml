@{
    ViewData["Title"] = "Users Management";
    
    // Get counts from ViewData or default to 0
    int userCount = ViewData["UserCount"] as int? ?? 0;
    int expertCount = ViewData["ExpertCount"] as int? ?? 0;
    int adminCount = ViewData["AdminCount"] as int? ?? 0;
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Index" class="text-decoration-none mb-3 d-inline-block">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Dashboard
            </a>
            <h1 class="display-5 fw-bold">
                <i class="fa-solid fa-users-gear me-2"></i>Users Management
            </h1>
            <p class="text-muted">View and manage users by role</p>
        </div>
    </div>

    <!-- Role Cards -->
    <div class="row g-4">
        <!-- Regular Users -->
        <div class="col-md-4">
            <a asp-action="UsersList" class="card text-decoration-none h-100 border-start border-4 border-primary shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fa-solid fa-user fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title mb-2">Regular Users</h3>
                    <p class="card-text text-muted mb-3">Clients who post vehicles</p>
                    <div class="mt-3">
                        <h2 class="text-primary display-6 fw-bold">@userCount</h2>
                        <small class="text-muted">users</small>
                    </div>
                </div>
            </a>
        </div>

        <!-- Experts -->
        <div class="col-md-4">
            <a asp-action="ExpertsList" class="card text-decoration-none h-100 border-start border-4 border-success shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fa-solid fa-user-check fa-3x text-success"></i>
                    </div>
                    <h3 class="card-title mb-2">Experts</h3>
                    <p class="card-text text-muted mb-3">Verified post reviewers</p>
                    <div class="mt-3">
                        <h2 class="text-success display-6 fw-bold">@expertCount</h2>
                        <small class="text-muted">experts</small>
                    </div>
                </div>
            </a>
        </div>

        <!-- Admins -->
        <div class="col-md-4">
            <a asp-action="AdminsList" class="card text-decoration-none h-100 border-start border-4 border-danger shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="fa-solid fa-shield-alt fa-3x text-danger"></i>
                    </div>
                    <h3 class="card-title mb-2">Administrators</h3>
                    <p class="card-text text-muted mb-3">System administrators</p>
                    <div class="mt-3">
                        <h2 class="text-danger display-6 fw-bold">@adminCount</h2>
                        <small class="text-muted">admins</small>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>