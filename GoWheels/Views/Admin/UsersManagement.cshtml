@{
    ViewData["Title"] = "Users Management";
}

<style>
    .users-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
        padding: 40px 20px;
    }

    .users-container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 3rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
        flex-wrap: wrap;
        gap: 1rem;
        padding-bottom: 1.5rem;
        border-bottom: 3px solid rgba(102, 126, 234, 0.2);
    }

    .page-title {
        font-weight: 700;
        font-size: 2.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }

    .btn-back {
        padding: 0.75rem 1.5rem;
        border: 2px solid rgba(102, 126, 234, 0.3);
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.9);
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .btn-back:hover {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: transparent;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .user-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        overflow: hidden;
        position: relative;
        text-decoration: none !important;
        height: 100%;
        display: block;
    }

    .user-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        transition: transform 0.3s ease;
        transform: scaleX(0);
    }

    /* Color variants */
    .user-card.users::before {
        background: linear-gradient(90deg, #4299e1, #3182ce);
    }
    
    .user-card.experts::before {
        background: linear-gradient(90deg, #38b2ac, #319795);
    }
    
    .user-card.admins::before {
        background: linear-gradient(90deg, #f56565, #e53e3e);
    }

    .user-card:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 1);
    }

    .user-card:hover::before {
        transform: scaleX(1);
    }

    /* Colored shadows on hover */
    .user-card.users:hover {
        box-shadow: 0 12px 40px rgba(66, 153, 225, 0.25);
    }
    
    .user-card.experts:hover {
        box-shadow: 0 12px 40px rgba(56, 178, 172, 0.25);
    }
    
    .user-card.admins:hover {
        box-shadow: 0 12px 40px rgba(229, 62, 62, 0.25);
    }

    .card-body {
        padding: 2.5rem 2rem;
        text-align: center;
    }

    .icon-circle {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        transition: all 0.3s ease;
    }

    .users .icon-circle {
        background: rgba(66, 153, 225, 0.15);
    }
    
    .experts .icon-circle {
        background: rgba(56, 178, 172, 0.15);
    }
    
    .admins .icon-circle {
        background: rgba(245, 101, 101, 0.15);
    }

    .user-card:hover .icon-circle {
        transform: scale(1.1) rotate(5deg);
    }

    .card-title {
        color: #2d3748;
        font-weight: 700;
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
        transition: color 0.3s ease;
    }

    .user-card.users:hover .card-title {
        color: #3182ce;
    }
    
    .user-card.experts:hover .card-title {
        color: #319795;
    }
    
    .user-card.admins:hover .card-title {
        color: #e53e3e;
    }

    .card-text {
        color: #718096;
        font-size: 1rem;
        line-height: 1.5;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .users-container {
            padding: 2rem 1rem;
        }
        
        .page-title {
            font-size: 2rem;
        }
        
        .page-header {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<div class="users-page">
    <div class="users-container">
        <div class="page-header">
            <h1 class="page-title">üë• Users Management</h1>
            <a asp-action="Index" class="btn-back">‚Üê Back to Dashboard</a>
        </div>
        
        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <a asp-action="UsersList" class="user-card users">
                    <div class="card-body">
                        <div class="icon-circle">
