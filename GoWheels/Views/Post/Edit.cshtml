@model GoWheels.ViewModels.PostEditViewModel
@{
    ViewData["Title"] = "Edit Post";
    var isAdmin = ViewData["IsAdmin"] as bool? ?? false;
    var isOwner = ViewData["IsOwner"] as bool? ?? false;
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6">
                <i class="fa-solid fa-edit me-2"></i>Edit Vehicle Post
            </h1>
            <p class="text-muted">Update the details of your vehicle listing</p>
        </div>
        <div class="col-auto">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-2"></i>Back to Details
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fa-solid fa-pen-to-square me-2"></i>Edit Vehicle Information
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                @if (isAdmin)
                {
                    <div class="alert alert-info mb-4">
                        <i class="fa-solid fa-user me-2"></i>
                        <strong>Owner:</strong> @Model.OwnerName
                    </div>
                }

                <!-- Basic Information -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Constructor" class="form-label">
                                <strong>Constructor/Marque *</strong>
                            </label>
                            <input asp-for="Constructor" class="form-control" required />
                            <span asp-validation-for="Constructor" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ModelName" class="form-label">
                                <strong>Model Name *</strong>
                            </label>
                            <input asp-for="ModelName" class="form-control" required />
                            <span asp-validation-for="ModelName" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Dates -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ReleaseDate" class="form-label">
                                <strong>Release Date *</strong>
                            </label>
                            <input asp-for="ReleaseDate" type="date" class="form-control" required />
                            <span asp-validation-for="ReleaseDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PurchaseDate" class="form-label">
                                <strong>Purchase Date *</strong>
                            </label>
                            <input asp-for="PurchaseDate" type="date" class="form-control" required />
                            <span asp-validation-for="PurchaseDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Price & Kilometrage -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label">
                                <strong>Price (DT) *</strong>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">DT</span>
                                <input asp-for="Price" type="number" step="0.001" class="form-control" required />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Kilometrage" class="form-label">
                                <strong>Kilometrage *</strong>
                            </label>
                            <div class="input-group">
                                <input asp-for="Kilometrage" type="number" class="form-control" required />
                                <span class="input-group-text">km</span>
                            </div>
                            <span asp-validation-for="Kilometrage" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- IsForRent (Admin only) -->
                @if (isAdmin)
                {
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="form-group mb-3">
                                <label class="form-label"><strong>Transaction Type</strong></label>
                                <div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="IsForRent" id="typeSell" value="false">
                                        <label class="form-check-label" for="typeSell">Sell</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" asp-for="IsForRent" id="typeRent" value="true">
                                        <label class="form-check-label" for="typeRent">Rent</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <input type="hidden" asp-for="IsForRent" />
                }

                <!-- Status -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="form-group mb-3">
                            <label asp-for="Status" class="form-label"><strong>Status</strong></label>
                            @if (isAdmin)
                            {
                                <select asp-for="Status" asp-items="Html.GetEnumSelectList<PostStatus>()" class="form-control"></select>
                            }
                            else
                            {
                                <select asp-for="Status" class="form-control">
                                    <option value="@PostStatus.Pending">Pending</option>
                                    <option value="@PostStatus.Deleted">Deleted</option>
                                </select>
                            }
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Specifications -->
                <div class="card mb-4 border-primary">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><i class="fa-solid fa-gear me-2"></i>Specifications</h6>
                        <span class="badge bg-light text-primary" id="specsCount">@Model.SpecificationKeys.Count specifications</span>
                    </div>
                    <div class="card-body">
                        <div id="specificationsContainer">
                            @for (int i = 0; i < Model.SpecificationKeys.Count; i++)
                            {
                                <div class="specification-row row mb-2" data-id="@i">
                                    <div class="col-md-5">
                                        <input type="text" asp-for="SpecificationKeys[i]" class="form-control" />
                                    </div>
                                    <div class="col-md-5">
                                        <input type="text" asp-for="SpecificationValues[i]" class="form-control" />
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-outline-danger w-100 remove-spec">
                                            <i class="fa-solid fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-outline-primary btn-sm mt-3" id="addSpecification">
                            <i class="fa-solid fa-plus me-1"></i>Add Specification
                        </button>
                    </div>
                </div>

                <!-- New Images -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="fa-solid fa-images me-2"></i>Add More Images</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label"><strong>Upload Additional Images</strong></label>
                            <input type="file" asp-for="NewImages" class="form-control" multiple accept="image/*" />
                        </div>
                        
                        @if (Model.ExistingImages.Any())
                        {
                            <div class="mb-3">
                                <h6>Existing Images</h6>
                                <div class="row">
                                    @foreach (var image in Model.ExistingImages)
                                    {
                                        <div class="col-md-3 col-6 mb-3">
                                            <div class="card">
                                                <img src="@image.ImageUrl" class="card-img-top" style="height: 150px; object-fit: cover;">
                                                <div class="card-body p-2">
                                                    <small class="text-muted">Existing image</small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fa-solid fa-check me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let specCounter = @Model.SpecificationKeys.Count;
            
            function createSpecificationRow() {
                const id = specCounter++;
                return `
                    <div class="specification-row row mb-2" data-id="${id}">
                        <div class="col-md-5">
                            <input type="text" name="SpecificationKeys" class="form-control" />
                        </div>
                        <div class="col-md-5">
                            <input type="text" name="SpecificationValues" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-outline-danger w-100 remove-spec">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>
                    </div>
                `;
            }
            
            document.getElementById('addSpecification').addEventListener('click', function() {
                const container = document.getElementById('specificationsContainer');
                container.insertAdjacentHTML('beforeend', createSpecificationRow());
                updateSpecsCount();
            });
            
            document.getElementById('specificationsContainer').addEventListener('click', function(e) {
                if (e.target.closest('.remove-spec')) {
                    e.target.closest('.specification-row').remove();
                    updateSpecsCount();
                }
            });
            
            function updateSpecsCount() {
                const count = document.querySelectorAll('.specification-row').length;
                document.getElementById('specsCount').textContent = `${count} specification${count !== 1 ? 's' : ''}`;
            }
            
            updateSpecsCount();
            
            // select active radio
            const radios = document.querySelectorAll('input[type="radio"][name="IsForRent"]');
            radios.forEach(radio => {
                radio.addEventListener('click', function() {
                    radios.forEach(r => r.parentElement.classList.remove('active'));
                    this.parentElement.classList.add('active');
                });
            });
        });
    </script>
}s