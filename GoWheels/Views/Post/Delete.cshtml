@model GoWheels.Models.Post
@{
    ViewData["Title"] = "Delete Post";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fa-solid fa-trash me-2"></i>
                        Delete Post
                    </h4>
                </div>
                <div class="card-body text-center">
                    <!-- Vehicle Info -->
                    <h5 class="mb-3">
                        <i class="fa-solid fa-car text-primary me-2"></i>
                        @Model.Constructor @Model.ModelName
                    </h5>
                    
                    <!-- Simple Warning -->
                    <div class="alert alert-warning mb-4">
                        <i class="fa-solid fa-exclamation-circle me-2"></i>
                        The post will be permanently deleted along with its images, comments, and ratings.
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-3">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="fa-solid fa-times me-1"></i> Cancel
                        </a>
                        
                        @if (Model.Status != GoWheels.Models.PostStatus.Deleted)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                <i class="fa-solid fa-archive me-1"></i> Archive Instead
                            </a>
                        }
                        
                        <form asp-action="Delete" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger w-100" 
                                    onclick="return confirm('Delete this post permanently? This cannot be undone.')">
                                <i class="fa-solid fa-trash me-1"></i> Delete Permanently
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  