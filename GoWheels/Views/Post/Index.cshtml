@model IEnumerable<GoWheels.Models.Post>

@{ ViewData["Title"] = "Index"; }

<!--<h1 class="display-4 mb-4">Index</h1>-->
<div class="container-center mx-auto px-1">
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary btn-lg rounded-2 ml-5"><span><i class="fa-solid fa-plus me-2"></i><strong>Create New</strong></span></a>
    </div>
    @foreach (var item in Model) {
        <partial name="_Post" model="item" />
    }
</div>
            
<style>
    .list-group-item {
        font-size: 1.1rem;
    }

    .btn {
        font-weight: bold;
        color: white;
        font-size: 1.1rem;
    }

    .btn-outline-primary {
        background-color: #0d6efd;
        padding: 0.5rem 1rem;
    }

    .btn-outline-info {
        background-color: #17a2b8;
        padding: 0.5rem 1.5rem;
    }

    .btn-outline-danger {
        background-color: #dc3545;
        padding: 0.5rem 1rem;
    }

    .darken-all {
        background-color: #d6dadf !important;
        color: #212529 !important;
        all: inherit;
    }

    .container-center {
        width: 100%;
        max-width: 800px;
    }

    .list-group-item strong {
        font-size: 1rem;
        color: #495057;
    }
</style>