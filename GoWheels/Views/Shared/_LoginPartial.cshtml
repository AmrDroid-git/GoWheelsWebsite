@using Microsoft.AspNetCore.Identity
@using GoWheels.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"
           style="color: var(--dark); font-weight: var(--font-weight-medium); transition: all var(--transition-base);">
            <i class="fa-solid fa-user-circle me-1"></i>
            Hello @UserManager.GetUserName(User)!
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link border-0"
                    style="color: var(--danger-color); font-weight: var(--font-weight-medium);
                           transition: all var(--transition-base); background: none;">
                <i class="fa-solid fa-sign-out-alt me-1"></i>Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register"
           style="color: var(--primary-color); font-weight: var(--font-weight-semibold);
                  transition: all var(--transition-base);">
            <i class="fa-solid fa-user-plus me-1"></i>Register
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login"
           style="color: var(--dark); font-weight: var(--font-weight-semibold);
                  transition: all var(--transition-base);">
            <i class="fa-solid fa-sign-in-alt me-1"></i>Login
        </a>
    </li>
}
</ul>

<style>
    #manage:hover, #login:hover, #register:hover {
        color: var(--primary-color) !important;
        transform: translateY(-2px);
    }

    #logout:hover {
        color: var(--danger-color) !important;
        transform: translateY(-2px);
    }
</style>