@{
    var role = ViewData["CurrentRole"] as string ?? "USER";
    var roleBadge = role switch
    {
        "USER" => "bg-primary",
        "EXPERT" => "bg-success",
        "ADMIN" => "bg-danger",
        _ => "bg-secondary"
    };
}

<table class="table table-hover data-table">
    <thead class="bg-light">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Posts</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i <= 10; i++)
        {
            <tr>
                <td><strong>@role User @i</strong></td>
                <td>user@(i)example.com</td>
                <td>+216 12 345 67@(i.ToString("00"))</td>
                <td>
                    <span class="badge bg-secondary">@(i * 3) posts</span>
                </td>
                <td>
                    @if (role == "EXPERT")
                    {
                        <span class="text-warning">
                            4.@i <i class="fa-solid fa-star"></i>
                        </span>
                    }
                    else
                    {
                        <span class="text-muted">Not rated</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-info" href="#">
                        <i class="fa-solid fa-eye me-1"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>