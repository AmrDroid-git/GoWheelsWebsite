@model GoWheels.Models.PostStatus

@if (Model == GoWheels.Models.PostStatus.Accepted)
{
    <span class="badge bg-success">
        <i class="fa-solid fa-circle-check me-1"></i> Verified
    </span>
}
else if (Model == GoWheels.Models.PostStatus.Pending)
{
    <span class="badge bg-warning text-dark">
        <i class="fa-solid fa-hourglass-half me-1"></i> Pending
    </span>
}
else if (Model == GoWheels.Models.PostStatus.Rejected)
{
    <span class="badge bg-danger">
        <i class="fa-solid fa-circle-exclamation me-1"></i> Rejected
    </span>
}
else if (Model == GoWheels.Models.PostStatus.Deleted)
{
    <span class="badge bg-secondary">
        <i class="fa-solid fa-trash me-1"></i> Deleted
    </span>
}