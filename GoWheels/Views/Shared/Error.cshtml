@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center mb-5">
                <div style="width: 120px; height: 120px; margin: 0 auto 2rem; border-radius: var(--radius-round);
                            background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(200, 35, 51, 0.1) 100%);
                            border: 4px solid var(--danger-color);
                            display: flex; align-items: center; justify-content: center;
                            animation: bounceIn 0.8s ease;">
                    <i class="fa-solid fa-triangle-exclamation fa-4x" style="color: var(--danger-color);"></i>
                </div>
                <h1 class="display-3 fw-bold mb-3" style="color: var(--danger-color);">Oops!</h1>
                <h2 class="h4 mb-4" style="color: var(--dark);">An error occurred while processing your request</h2>
            </div>

            @if (Model.ShowRequestId)
            {
                <div class="card border-0 shadow-sm mb-4" style="border-radius: var(--radius-lg);
                     border-left: 4px solid var(--danger-color) !important;">
                    <div class="card-body p-4">
                        <h5 style="color: var(--dark); font-weight: var(--font-weight-bold); margin-bottom: 1rem;">
                            <i class="fa-solid fa-fingerprint me-2" style="color: var(--danger-color);"></i>
                            Request ID
                        </h5>
                        <code style="background: var(--bg-secondary); padding: 0.5rem 1rem; border-radius: var(--radius-md);
                              display: inline-block; font-size: var(--font-size-base);">@Model.RequestId</code>
                        <p class="mt-3 mb-0 text-muted small">
                            Please include this ID when contacting support.
                        </p>
                    </div>
                </div>
            }

            <div class="card border-0 shadow-sm mb-4" style="border-radius: var(--radius-lg);">
                <div class="card-body p-4">
                    <h5 style="color: var(--dark); font-weight: var(--font-weight-bold); margin-bottom: 1rem;">
                        <i class="fa-solid fa-lightbulb me-2" style="color: var(--warning-color);"></i>
                        What you can do
                    </h5>
                    <ul style="color: var(--gray-dark); line-height: 1.8; padding-left: 1.5rem;">
                        <li>Try refreshing the page</li>
                        <li>Go back to the previous page</li>
                        <li>Return to the home page</li>
                        <li>Contact support if the problem persists</li>
                    </ul>
                </div>
            </div>

            <div class="alert" style="background: var(--bg-gradient-light); border-left: 4px solid var(--info-color);
                                      border-radius: var(--radius-md); padding: 1.5rem;">
                <i class="fa-solid fa-code me-2" style="color: var(--info-color);"></i>
                <strong>Development Mode:</strong> Swapping to <strong>Development</strong> environment will display
                more detailed information about errors. The Development environment shouldn't be enabled for deployed applications.
            </div>

            <div class="text-center mt-5">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="btn btn-lg" style="background: var(--primary-gradient); color: white; border: none;
                   border-radius: var(--radius-md); padding: 1rem 3rem; font-weight: var(--font-weight-bold);
                   box-shadow: var(--shadow-primary); transition: all var(--transition-bounce);">
                    <i class="fa-solid fa-home me-2"></i>Go to Home Page
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg) !important;
    }
</style>