@model IEnumerable<GoWheels.Models.Post>

@{
    // Parameters - these should be passed from the calling view
    string pageTitle = ViewData["PageTitle"] as string ?? "Posts";
    string iconClass = ViewData["IconClass"] as string ?? "fa-solid fa-list";
    string iconColor = ViewData["IconColor"] as string ?? "primary";
    string badgeClass = ViewData["BadgeClass"] as string ?? "bg-gradient-primary";
    string description = ViewData["Description"] as string ?? "List of posts";
    string backAction = ViewData["BackAction"] as string ?? "PostsManagement";
    string backText = ViewData["BackText"] as string ?? "Back to Posts";
}

<div class="container py-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="@backAction" class="text-decoration-none mb-3 d-inline-flex align-items-center"
               style="color: var(--primary-color); font-weight: var(--font-weight-semibold); transition: all var(--transition-base);">
                <i class="fa-solid fa-arrow-left me-2"></i> @backText
            </a>
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <h1 class="display-5 fw-bold mb-2" style="background: var(--primary-gradient);
                        -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                        <i class="@iconClass me-2"></i>@pageTitle
                    </h1>
                    <p class="text-muted mb-0">@description</p>
                </div>
                <span class="@badgeClass px-4 py-2" style="border-radius: var(--radius-lg);
                      font-size: var(--font-size-xl); font-weight: var(--font-weight-bold);
                      box-shadow: var(--shadow-primary);">
                    @Model.Count()
                </span>
            </div>
        </div>
    </div>

    <!-- Post Table -->
    <div class="card border-0 shadow-sm" style="border-radius: var(--radius-lg); overflow: hidden;">
        <div class="card-header text-white" style="background: var(--primary-gradient); border: none; padding: 1.5rem;">
            <h5 class="mb-0" style="font-weight: var(--font-weight-bold);">
                <i class="fa-solid fa-list-check me-2"></i>@pageTitle List
                <small class="ms-3 opacity-75" style="font-size: var(--font-size-sm);">Click details to review</small>
            </h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover data-table mb-0">
                <thead style="background: var(--bg-secondary);">
                    <tr>
                        <th style="padding: 1rem; font-weight: var(--font-weight-semibold);">Created</th>
                        <th style="padding: 1rem; font-weight: var(--font-weight-semibold);">Constructor</th>
                        <th style="padding: 1rem; font-weight: var(--font-weight-semibold);">Model</th>
                        <th style="padding: 1rem; font-weight: var(--font-weight-semibold);">Type</th>
                        <th style="padding: 1rem; font-weight: var(--font-weight-semibold);">Price</th>
                        <th style="padding: 1rem; font-weight: var(--font-weight-semibold);">Owner</th>
                        <th style="padding: 1rem; font-weight: var(--font-weight-semibold);">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="transition: all var(--transition-base);">
                            <td style="padding: 1rem;">@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td style="padding: 1rem; font-weight: var(--font-weight-medium);">@item.Constructor</td>
                            <td style="padding: 1rem;">@item.ModelName</td>
                            <td style="padding: 1rem;">
                                @if (item.IsForRent)
                                {
                                    <span class="badge bg-gradient-info" style="border-radius: var(--radius-md); padding: 0.4rem 0.8rem;">
                                        <i class="fa-solid fa-key me-1"></i>Rent
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-gradient-success" style="border-radius: var(--radius-md); padding: 0.4rem 0.8rem;">
                                        <i class="fa-solid fa-dollar-sign me-1"></i>Sale
                                    </span>
                                }
                            </td>
                            <td style="padding: 1rem; font-weight: var(--font-weight-semibold); color: var(--success-color);">
                                @item.Price.ToString("N0") DT
                            </td>
                            <td style="padding: 1rem;">
                                <a href="/user/details/@item.Owner.Id" class="text-decoration-none"
                                   style="color: var(--primary-color); font-weight: var(--font-weight-medium);
                                          transition: all var(--transition-base);">
                                    <i class="fa-solid fa-user me-1"></i>@item.Owner.Name
                                </a>
                            </td>
                            <td style="padding: 1rem;">
                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-controller="Post"
                                       asp-action="Details"
                                       asp-route-id="@item.Id"
                                       style="border-radius: var(--radius-md); transition: all var(--transition-bounce);">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <a class="btn btn-sm btn-outline-warning"
                                       asp-controller="Post"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       style="border-radius: var(--radius-md); transition: all var(--transition-bounce);">
                                        <i class="fa-solid fa-edit"></i>
                                    </a>
                                    @if (item.Status == PostStatus.Deleted)
                                    {
                                        <a class="btn btn-sm btn-outline-success"
                                           asp-action="DetailsPost"
                                           asp-route-id="@item.Id"
                                           style="border-radius: var(--radius-md); transition: all var(--transition-bounce);">
                                            <i class="fa-solid fa-rotate-left"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-sm btn-outline-danger"
                                           asp-action="DetailsPost"
                                           asp-route-id="@item.Id"
                                           style="border-radius: var(--radius-md); transition: all var(--transition-bounce);">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div style="color: var(--gray);">
                                    <i class="fa-solid fa-inbox fa-3x mb-3" style="opacity: 0.3;"></i>
                                    <p class="mb-0" style="font-size: var(--font-size-lg);">No posts found.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .data-table tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.data-table').DataTable({
            order: [[0, 'asc']],
            pageLength: 25,
            language: { search: "Search posts:" },
            columnDefs: [{ orderable: false, targets: 5 }]
        });
    });
</script>