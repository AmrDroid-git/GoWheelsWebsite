@{
    string title = ViewData["CardTitle"] as string ?? "Status";
    string iconClass = ViewData["IconClass"] as string ?? "fa-solid fa-circle";
    string iconColor = ViewData["IconColor"] as string ?? "primary";
    string borderColor = ViewData["BorderColor"] as string ?? "primary";
    string action = ViewData["Action"] as string ?? "Index";
    int count = ViewData["Count"] as int? ?? 0;
    string description = ViewData["Description"] as string ?? "Description";

    // Map colors to gradients
    var gradientMap = new Dictionary<string, string>
    {
        { "primary", "var(--primary-gradient)" },
        { "success", "var(--success-gradient)" },
        { "warning", "var(--warning-gradient)" },
        { "danger", "var(--danger-gradient)" },
        { "info", "var(--info-gradient)" }
    };

    var gradient = gradientMap.ContainsKey(iconColor) ? gradientMap[iconColor] : "var(--primary-gradient)";
}

<div class="col-md-3">
    <a asp-action="@action" class="card text-decoration-none h-100 border-0 shadow-sm stat-card"
       style="overflow: hidden; transition: all var(--transition-bounce);">
        <div class="stat-card-gradient" style="position: absolute; top: 0; left: 0; width: 100%; height: 5px; background: @gradient;"></div>
        <div class="card-body text-center p-4" style="padding-top: 2rem !important;">
            <div class="mb-3" style="position: relative;">
                <div style="width: 80px; height: 80px; margin: 0 auto; border-radius: var(--radius-round);
                            background: @gradient; display: flex; align-items: center; justify-content: center;
                            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);">
                    <i class="@iconClass fa-2x" style="color: white;"></i>
                </div>
            </div>
            <h3 class="card-title mb-2" style="color: var(--dark); font-weight: var(--font-weight-bold);">@title</h3>
            <p class="card-text mb-3" style="color: var(--gray); font-size: var(--font-size-sm);">@description</p>
            <div class="mt-3">
                <h2 class="display-6 fw-bold" style="background: @gradient; -webkit-background-clip: text;
                    -webkit-text-fill-color: transparent; background-clip: text;">@count</h2>
                <small class="text-muted">posts</small>
            </div>
        </div>
    </a>
</div>

<style>
    .stat-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl) !important;
    }
</style>