<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoWheels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/nouislider@15.7.0/dist/nouislider.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoWheels.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        .navbar-brand img {
            height: 40px;
            width: auto;
        }

        .navbar {
            background-color: #212529 !important;
        }

        .navbar .nav-link {
            color: #f8f9fa !important;
            font-family: 'Orbitron', sans-serif;
            font-weight: 500;
        }

        .navbar .nav-link:hover {
            color: #adb5bd !important;
        }

        .footer {
            background-color: #f8f9fa !important;
            color: #212529 !important;
        }

        .footer a {
            color: #212529 !important;
        }

        .footer a:hover {
            color: #495057 !important;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1 0 auto;
        }
    </style>
</head>

<body class="wrapper">
    <header class="mb-5">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="GoWheels Logo" class="me-2">
                    <span class="fw-bold">GoWheels</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- LEFT NAV ITEMS (Role-specific) -->
                    <ul class="navbar-nav me-auto">
                        <!-- Cars link - Visible to all -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Post" asp-action="Index">Cars</a>
                        </li>
                        
                        <!-- Expert-only: Pending Review -->
                        @if (User.IsInRole("EXPERT"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Expert" asp-action="Index">Pending Review</a>
                            </li>
                        }
                        
                        <!-- Admin-only: Dashboard -->
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                        }
                        
                        @* Hide Users link as requested *@
                        @*
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                        </li>
                        *@
                    </ul>
                    
                    <!-- RIGHT NAV ITEMS (Account section) -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Username -->
                            <li class="nav-item">
                                <span class="nav-link">@User.Identity.Name</span>
                            </li>
                            
                            <!-- My Cars (User role only) -->
                            @if (User.IsInRole("USER"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Post" asp-action="MyPosts">My Cars</a>
                                </li>
                            }
                            
                            <!-- Logout -->
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                    <button type="submit" class="nav-link btn btn-link" style="border: none; background: none;">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Login/Register when not authenticated -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - GoWheels
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>