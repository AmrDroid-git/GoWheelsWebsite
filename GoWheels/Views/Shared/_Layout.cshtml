<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoWheels</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/nouislider@15.7.0/dist/nouislider.min.css" />
    <link rel="stylesheet" href="~/css/theme-variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoWheels.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        .navbar-brand img {
            height: 40px;
            width: auto;
            transition: transform 0.6s ease-out;
            animation: wheelSpin 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .navbar-brand:hover img {
            animation: wheelRoll 0.6s ease-in-out forwards;
        }

        @@keyframes wheelSpin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        @@keyframes wheelRoll {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        .navbar {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%) !important;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
            padding: 1rem 0;
            transition: all var(--transition-base);
        }

        .navbar.scrolled {
            box-shadow: var(--shadow-lg);
            padding: 0.5rem 0;
        }

        .navbar-brand {
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover {
            transform: scale(1.05);
        }

        .navbar .nav-link {
            color: #f8f9fa !important;
            font-family: 'Orbitron', sans-serif;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .navbar .nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background: var(--primary-gradient);
            transform: translateX(-50%);
            transition: width var(--transition-base);
        }

        .navbar .nav-link:hover::before {
            width: 80%;
        }

        .navbar .nav-link:hover {
            color: var(--primary-color) !important;
            background-color: rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .navbar .btn-link.nav-link {
            display: inline-block;
        }

        .footer {
            background: var(--bg-gradient-light) !important;
            color: var(--dark) !important;
            padding: 2.5rem 0;
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.08);
            flex-shrink: 0;
            position: relative;
            z-index: 10;
            border-top: 3px solid transparent;
            border-image: var(--primary-gradient) 1;
        }

        .footer a {
            color: var(--dark) !important;
            transition: all var(--transition-base);
            font-weight: 500;
        }

        .footer a:hover {
            color: var(--primary-color) !important;
            transform: translateX(3px);
        }

        .footer-brand {
            font-family: 'Orbitron', sans-serif;
            font-weight: 600;
            font-size: 1.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1 0 auto;
            position: relative;
            z-index: 1;
        }

        main {
            padding-bottom: 3rem;
        }
    </style>
    @if (IsSectionDefined("Head"))
    {
        @RenderSection("Head", required: false)
    }
    @Html.AntiForgeryToken()
</head>

<body class="wrapper">
    <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
        <div id="ajaxToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto" id="toastTitle"></strong>
                <small class="text-muted" id="toastTime"></small>
                <button type="button" class="btn-close ms-2 mb-1" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastBody"></div>
        </div>
    </div>

    <header class="">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="GoWheels Logo" class="me-2">
                    <span class="fw-bold">GoWheels</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- LEFT NAV ITEMS (Role-specific) -->
                    <ul class="navbar-nav me-auto">
                        <!-- Cars link - Visible to all -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Post" asp-action="Index">Cars</a>
                        </li>
                        
                        <!-- Expert-only: Pending Review -->
                        @if (User.IsInRole("EXPERT"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Expert" asp-action="Index">Pending Review</a>
                            </li>
                        }
                        
                        <!-- Admin-only: Dashboard -->
                        @if (User.IsInRole("ADMIN"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Dashboard</a>
                            </li>
                        }
                        
                        @* Hide Users link as requested *@
                        @*
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                        </li>
                        *@
                    </ul>
                    
                    <!-- RIGHT NAV ITEMS (Account section) -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Username as direct link to profile -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Details" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value">
                                    @User.Identity.Name
                                </a>
                            </li>
                            
                            <!-- My Cars (User role only) -->
                            @if (User.IsInRole("USER"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Post" asp-action="MyPosts">My Cars</a>
                                </li>
                            }
                            
                            <!-- Logout -->
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                    <button type="submit" class="nav-link btn btn-link" style="border: none; background: none;">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Login/Register when not authenticated -->
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                    <span class="footer-brand">GoWheels</span>
                    <p class="mt-2 mb-0 small">Your trusted automotive marketplace</p>
                </div>
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    &copy; 2026 - GoWheels. All rights reserved.
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <a href="#" class="text-decoration-none me-3"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#" class="text-decoration-none me-3"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#" class="text-decoration-none me-3"><i class="fa-brands fa-instagram"></i></a>
                    <a href="#" class="text-decoration-none"><i class="fa-brands fa-linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function showAjaxToast(title, message, isSuccess = true) {
            const toastEl = $('#ajaxToast');
            $('#toastTitle').text(title);
            $('#toastBody').text(message);
            $('#toastTime').text(new Date().toLocaleTimeString());

            // Enhanced color styling based on success / error
            const headerClass = isSuccess ? 'bg-success' : 'bg-danger';
            toastEl.find('.toast-header')
                .removeClass('bg-success bg-danger bg-warning bg-info')
                .addClass(headerClass)
                .css('color', 'white');

            // Add gradient for success
            if (isSuccess) {
                toastEl.find('.toast-header').css({
                    'background': 'linear-gradient(135deg, #28a745 0%, #20c997 100%)',
                    'border': 'none'
                });
            } else {
                toastEl.find('.toast-header').css({
                    'background': 'linear-gradient(135deg, #dc3545 0%, #c82333 100%)',
                    'border': 'none'
                });
            }

            const toast = new bootstrap.Toast(toastEl[0], { delay: 3000 });
            toast.show();
        }

        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Scroll animation observer
        document.addEventListener('DOMContentLoaded', function() {
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('aos-animate');
                    }
                });
            }, observerOptions);

            document.querySelectorAll('[data-aos]').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get CSRF token
        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
        
        // Handle clicks on expert action buttons
        document.addEventListener('click', async function(e) {
            const button = e.target.closest('.expert-action-btn');
            if (!button) return;
            
            e.preventDefault();
            
            const postId = button.dataset.id;
            const action = button.dataset.action;
            const url = `/Expert/${action}/${postId}`;
            
            // Disable button to prevent double clicks
            button.disabled = true;
            
            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    }
                });
                
                const data = await response.json();
                
                // Show toast with message from server
                if (typeof showAjaxToast === 'function') {
                    const isSuccess = response.ok;
                    showAjaxToast(isSuccess ? 'Success' : 'Error', data.message, isSuccess);
                }
                
                if (response.ok) {
                    // Reload page after 2 seconds on success
                    setTimeout(() => location.reload(), 1500);
                } else {
                    // Re-enable button on error
                    button.disabled = false;
                }
                
            } catch (error) {
                // Log the error for debugging
                console.error('AJAX request failed:', error);

                if (typeof showAjaxToast === 'function') {
                    showAjaxToast('Error', 'Network request failed', false);
                }
                button.disabled = false;
            }
        });
    });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>