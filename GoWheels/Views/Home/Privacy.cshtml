@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <div style="width: 80px; height: 80px; margin: 0 auto 1.5rem; border-radius: var(--radius-round);
                            background: var(--primary-gradient); display: flex; align-items: center; justify-content: center;
                            box-shadow: var(--shadow-primary);">
                    <i class="fa-solid fa-shield-halved fa-2x" style="color: white;"></i>
                </div>
                <h1 class="display-4 fw-bold mb-3" style="background: var(--primary-gradient);
                    -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                    @ViewData["Title"]
                </h1>
                <p class="lead text-muted">Your privacy is important to us</p>
            </div>

            <div class="card border-0 shadow-sm" style="border-radius: var(--radius-lg);">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <h3 style="color: var(--dark); font-weight: var(--font-weight-bold); margin-bottom: 1rem;">
                            <i class="fa-solid fa-info-circle me-2" style="color: var(--primary-color);"></i>
                            Information We Collect
                        </h3>
                        <p style="color: var(--gray-dark); line-height: 1.8;">
                            GoWheels collects information to provide better services to our users. This includes information
                            you provide when creating an account, posting vehicles, and interacting with other users.
                        </p>
                    </div>

                    <div class="mb-4">
                        <h3 style="color: var(--dark); font-weight: var(--font-weight-bold); margin-bottom: 1rem;">
                            <i class="fa-solid fa-lock me-2" style="color: var(--success-color);"></i>
                            How We Use Your Information
                        </h3>
                        <p style="color: var(--gray-dark); line-height: 1.8;">
                            We use the information we collect to maintain and improve GoWheels, to develop new features,
                            and to protect GoWheels and our users. We also use your information to communicate with you
                            about your account and our services.
                        </p>
                    </div>

                    <div class="mb-4">
                        <h3 style="color: var(--dark); font-weight: var(--font-weight-bold); margin-bottom: 1rem;">
                            <i class="fa-solid fa-user-shield me-2" style="color: var(--info-color);"></i>
                            Data Protection
                        </h3>
                        <p style="color: var(--gray-dark); line-height: 1.8;">
                            We implement appropriate security measures to protect your personal information. Your data is
                            encrypted and stored securely, and we regularly review our security practices to ensure your
                            information remains protected.
                        </p>
                    </div>

                    <div class="alert" style="background: var(--bg-gradient-light); border-left: 4px solid var(--primary-color);
                                              border-radius: var(--radius-md); padding: 1.5rem;">
                        <i class="fa-solid fa-envelope me-2" style="color: var(--primary-color);"></i>
                        <strong>Questions?</strong> If you have any questions about our privacy policy,
                        please contact us at <a href="mailto:privacy@gowheels.com" style="color: var(--primary-color);
                        font-weight: var(--font-weight-semibold);">privacy@gowheels.com</a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-primary" style="border-radius: var(--radius-md);
                   padding: 0.75rem 2rem; font-weight: var(--font-weight-semibold); transition: all var(--transition-bounce);">
                    <i class="fa-solid fa-arrow-left me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>