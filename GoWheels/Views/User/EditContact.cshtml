@model GoWheels.ViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Edit Contact Information";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-user-edit me-2"></i>Edit Contact Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditContact" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fa-solid fa-user me-1"></i>Full Name
                            </label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="fa-solid fa-phone me-1"></i>Phone Number
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fa-solid fa-location-dot me-1"></i>Address
                            </label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-check me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}