@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    /* Same Gradient Background Animation */
    .register-page {
        min-height: 100vh;
        background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
        background-size: 400% 400%;
        animation: gradient 15s ease infinite;
        display: flex;
        align-items: center;
        padding: 40px 20px;
    }
    

    /* Glassmorphism Card - Slightly wider for more fields */
    .register-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 2.5rem;
        transform: translateY(0);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .register-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.5);
    }

    /* Header Styling */
    .register-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .register-header h2 {
        color: #2d3748;
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .register-header hr {
        border: none;
        height: 3px;
        background: linear-gradient(90deg, transparent, #667eea, transparent);
        margin: 1rem 0;
    }

    /* Floating Input Styling */
    .form-floating {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .form-floating .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        height: 60px;
        padding: 1rem 1rem 0.5rem 3rem;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f7fafc;
    }

    .form-floating .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        background-color: #fff;
        transform: translateY(-2px);
    }

    .form-floating label {
        padding-left: 3rem;
        color: #718096;
        font-weight: 500;
    }

    .form-floating .form-control:focus ~ label,
    .form-floating .form-control:not(:placeholder-shown) ~ label {
        color: #667eea;
        font-weight: 600;
    }

    /* Input Icons */
    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #a0aec0;
        font-size: 1.2rem;
        z-index: 10;
        transition: color 0.3s ease;
    }

    .form-floating .form-control:focus ~ .input-icon {
        color: #667eea;
    }

    /* Button Styling */
    .btn-register {
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        position: relative;
        overflow: hidden;
        margin-top: 0.5rem;
    }

    .btn-register:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
    }

    .btn-register:active {
        transform: translateY(0);
    }

    .btn-register::after {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: rgba(255, 255, 255, 0.2);
        transform: rotate(30deg);
        transition: all 0.6s ease;
    }

    .btn-register:hover::after {
        transform: rotate(30deg) translate(20%, 20%);
    }

    /* Login Link */
    .login-link {
        text-align: center;
        margin-top: 1.5rem;
        color: #718096;
        padding-top: 1rem;
        border-top: 1px solid rgba(102, 126, 234, 0.1);
    }

    .login-link a {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        position: relative;
        transition: color 0.3s ease;
    }

    .login-link a::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 2px;
        bottom: -2px;
        left: 0;
        background: linear-gradient(90deg, #667eea, #764ba2);
        transform: scaleX(0);
        transform-origin: bottom right;
        transition: transform 0.3s ease;
    }

    .login-link a:hover {
        color: #764ba2;
    }

    .login-link a:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }

    /* Validation Styling */
    .text-danger {
        color: #e53e3e;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    /* Alert Styling */
    .alert-validation {
        background: rgba(245, 101, 101, 0.1);
        border-left: 4px solid #f56565;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #c53030;
    }

    /* Responsive */
    @@media (max-width: 576px) {
        .register-card {
            padding: 1.5rem;
        }
        
        .register-page {
            padding: 20px 15px;
        }
    }

    /* Scrollbar styling for long forms */
    .register-card::-webkit-scrollbar {
        width: 8px;
    }

    .register-card::-webkit-scrollbar-track {
        background: rgba(102, 126, 234, 0.1);
        border-radius: 4px;
    }

    .register-card::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 4px;
    }
</style>

<div class="register-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="register-card">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="register-header">
                            <h2>Create Account</h2>
                            <hr />
                        </div>

                        <div asp-validation-summary="ModelOnly" class="alert-validation" role="alert"></div>

                        <div class="form-floating">
                            <i class="input-icon">👤</i>
                            <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Username" />
                            <label asp-for="Input.Name">Username / Full Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <i class="input-icon">📱</i>
                            <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="12345678" />
                            <label asp-for="Input.PhoneNumber">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <i class="input-icon">🏠</i>
                            <input asp-for="Input.Address" class="form-control" aria-required="true" placeholder="Address" />
                            <label asp-for="Input.Address">Full Address</label>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <i class="input-icon">✉️</i>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <i class="input-icon">🔒</i>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating">
                            <i class="input-icon">🔐</i>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn-register">
                            Create Account
                        </button>
                        
                        <div class="login-link">
                            <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}